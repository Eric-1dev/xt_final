@{
    Layout = "~/_MainLayout.cshtml";
}

<div class="text-center text-muted"><h1>Интернет фотоальбом</h1></div>
<div class="container-fluid d-flex flex-column">
    <div class="row flex-fill d-flex h-100 justify-content-start">
        <div class="col-2" id="main_my_info">
            @RenderPage("~/Pages/mainUserInfoPartial.cshtml")
        </div>
        <div class="col-7">
            <div class="row" id="main_find">
                <div class="input-group mb-2 tag_row">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Поиск</div>
                    </div>
                    <div class="form-control">
                        <input type="text" id="findText" maxlength="20" placeholder="Введите тег для поиска фото" autocomplete="off" />
                        <div class="tags_dropdown" id="main_tags_dropdown"></div>
                    </div>
                </div>
            </div>
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" id="tab_1" data-toggle="tab">Топ 20 по рейтингу</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tab_2" data-toggle="tab">Топ 20 обсуждаемых</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tab_3" data-toggle="tab">Топ 20 по количеству оценок</a>
                </li>
            </ul>
            <div class="row align-items-center" id="main_photo">
                @RenderPage("~/Pages/mainPhotoPartial.cshtml")
            </div>
        </div>
        <div class="col-3" id="main_users">
            @RenderPage("~/Pages/mainUsersPartial.cshtml")
        </div>
    </div>
</div>


@RenderPage("~/Pages/_toast.cshtml")
@RenderPage("~/Pages/_userEditModal.cshtml")
@RenderPage("~/Pages/_modalConfirm.cshtml")
@RenderPage("~/Pages/_photoEditModal.cshtml")